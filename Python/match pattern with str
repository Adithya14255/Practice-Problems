def Match(firstStr, secondStr):
    # Write your code here.
	ptr1=0
	ptr2=0
	while ptr1 != len(firstStr)-1:
		if firstStr[ptr1] == '*':
            while secondStr[ptr2] != firstStr[ptr1+1]:
				ptr2+=1
			ptr1+=1
	    elif firstStr[ptr1] == '?':
			ptr2+=1
			ptr1+=1
		else:
			if firstStr[ptr1] == secondStr[ptr2]:
				ptr1+=1
				ptr2+=1
			else:
				return 0
	return 1
