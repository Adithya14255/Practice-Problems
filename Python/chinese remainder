a=2
b=3
c=2
m1 = 3
m2 = 5
m3 = 7
M = m1*m2*m3
M1 = M/m1
M2 = M/m2
M3 = M/m3
for i in (range(100)):
    if M1*i%m1 == 1:
        Y1 = i
        break
for i in (range(100)):
    if M2*i%m2 == 1:
        Y2 = i
        break
for i in (range(100)):
    if M3*i%m3 == 1:
        Y3 = i
        break
print((a*M1*Y1+b*M2*Y2+c*M3*Y3)%M)
