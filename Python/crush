# very weird array manipulation with prefix sum and shit
def arrayManipulation(n, queries):
    # Write your code here
    arr = [0 for _ in range(n+2)]
    for i in queries:
        a,b,k = i[0],i[1],i[2]
        arr[a] += k
        arr[b+1] -= k
    curr = 0
    max_val = 0
    for i in range(1,n+1):
        curr += arr[i]
        max_val = max(max_val,curr)             
    return max_val
    
