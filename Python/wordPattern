class Solution:
    def wordPattern(self, pattern: str, s: str) -> bool:
        s = s.split()
        if len(s) != len(pattern):
            return False
        mapping = dict()
        for i in range(len(s)):
            if pattern[i] in mapping.keys():
                if mapping[pattern[i]] != s[i]:
                    return False
            elif s[i] in mapping.values():
                    return False
            mapping[pattern[i]] = s[i]            
        return True
