
#include <stdio.h>

int main()
{
    int n,j=0,count=0;
    scanf("%d",&n);
    char str[n][101];
    for(int i=0;i<n;i++){
        scanf("%s",str[i]);
    }
    for(int i=0;i<n;i++){
        count = strlen(str[i])-2;
        count>8?printf("%c%d%c\n",str[i][0],count,str[i][count+1]):printf("%s\n",str[i]);
    }
    
    return 0;
}
