#include <stdio.h>
#include <string.h>
int main()
{
    int n,j=0,count=0,blocks;
    scanf("%d",&n);
    char str[200005];
    for(int i=0;i<n;i++){
        scanf("%s",str);
        count = 0;
        blocks = 0;
        int j=0;
        while(j<strlen(str){
            if (str[j] == '(') count++;
            else count--;
            if(count==0){
                blocks++;
                if(blocks>1)
                    break;
            }j++;
        }
        if(blocks>1) printf("YES\n");
        else printf("NO\n");
    }
    
    return 0;
}
